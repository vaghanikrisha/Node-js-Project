<%- include('Header') %>

  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Management</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
      body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #e3f2fd, #e1bee7);
        margin: 0;
        padding: 0;
      }

      .container {
        max-width: 1100px;
        margin: auto;
        padding: 40px 20px;
      }

      .page-title {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #333;
        margin-bottom: 30px;
      }

      .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
      }

      .card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
        background: #ffffff;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
      }

      .card:hover {
        transform: translateY(-5px);
      }

      .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-bottom: 3px solid #000;
      }

      .card-body {
        padding: 20px;
        text-align: center;
      }

      .card-title {
        font-size: 22px;
        font-weight: bold;
        color: #222;
        text-transform: capitalize;
      }

      .card-text {
        font-size: 15px;
        color: #555;
        margin-bottom: 10px;
      }

      .price {
        font-size: 18px;
        font-weight: bold;
        color: #28a745;
      }

      .qty {
        font-size: 14px;
        color: #666;
      }

      .btn-group {
        display: flex;
        justify-content: center;
        gap: 10px;
      }

      .btn {
        padding: 10px;
        font-size: 14px;
        border-radius: 8px;
        text-align: center;
        transition: all 0.3s ease-in-out;
      }

      .btn-danger {
        background-color: #dc3545;
        border: none;
      }

      .btn-danger:hover {
        background-color: #b92c3e;
      }

      .btn-primary {
        background-color: #007bff;
        border: none;
      }

      .btn-primary:hover {
        background-color: #0056b3;
      }

      .btn-success {
        background-color: #28a745;
        border: none;
        width: 100%;
        margin-top: 10px;
      }

      .btn-success:hover {
        background-color: #218838;
      }

      .no-blogs {
        text-align: center;
        font-size: 18px;
        font-weight: bold;
        color: #777;
        margin-top: 20px;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h3 class="page-title">Hello, <%= locals.users.name %>!</h3>
      <div class="row">
        <% blogs.map((blog, i)=> { %>
          <div class="col-md-6 col-lg-4">
            <div class="card">
              <img src="/<%= blog.image %>" class="card-img-top" alt="Blog Image" id="pics" />
              <div class="card-body">
                <h5 class="card-title">
                  <%= blog.title %>
                </h5>
                <p class="card-text">
                  <%= blog.caption %>
                </p>
                
                <div class="btn-group">
                  <a href="/deleteblog?id=<%= blog._id %>" class="btn btn-outline-danger">‚ùå Delete</a>
                  <a href="/editblog?id=<%= blog._id %>" class="btn btn-outline-primary">‚úè Edit</a>
                  <a href="/addtocart?id=<%= blog._id %>" class="btn btn-outline-success full-width-btn">üõí Add to
                    Cart</a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </body>
  </html>

  <%- include('Footer') %>