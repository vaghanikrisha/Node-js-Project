<%- include('../header') %>

    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <form class="form-horizontal" method="post" action="/subcategory/updatesubcategory">
                            <input type="hidden" name="editid" value="<%= single?.id %>" />
                            <div class="card-body">
                                <h4 class="card-title">Edit Subcategory</h4>
                                <div class="form-group row">
                                    <label for="fname"
                                        class="col-sm-3 text-right control-label col-form-label">Category</label>
                                    <div class="col-sm-9">
                                        <select name="category" class="form-control">
                                            <option>---select category---</option>
                                            <% category.map((cat,index)=>{ %>
                                                <option <% if(single?.categoryId.category==cat?.category) { %>
                                                    selected
                                                    <% } %> value="<%= cat?.id %>">
                                                            <%= cat?.category %>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="fname"
                                        class="col-sm-3 text-right control-label col-form-label">Subcategory</label>
                                    <div class="col-sm-9">
                                        <input type="text" name="subcategory" value="<%= single?.subcategory %>"
                                            class="form-control" placeholder="Subcategory Name Here">
                                    </div>
                                </div>

                            </div>
                            <div class="border-top">
                                <div class="card-body">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>