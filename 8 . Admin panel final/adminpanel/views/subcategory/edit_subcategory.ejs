<%- include('../header') %>

<style>
/* General Styling */
body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(135deg, #cecfd3, #243b55);
    margin: 0;
    padding: 0;
}

.page-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background: linear-gradient(135deg, #cecfd3, #243b55);
    padding: 20px;
}

/* Container */
.container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 20px;
}

/* Card Styling */
.card {
    background: #ffffff;
    width: 520px;
    border-radius: 12px;
    box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
    padding: 20px;
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0px 8px 18px rgba(0, 0, 0, 0.2);
}

/* Card Title */
.card-title {
    font-size: 22px;
    font-weight: bold;
    color: #2c3e50;
    text-align: center;
    margin-bottom: 15px;
}

/* Form Styling */
.form-group {
    margin-bottom: 15px;
}

.form-group label {
    font-weight: 600;
    color: #34495e;
}

.form-control {
    border-radius: 6px;
    padding: 10px;
    font-size: 14px;
    border: 1px solid #bdc3c7;
    transition: all 0.3s ease-in-out;
}

.form-control:focus {
    border-color: #3498db;
    box-shadow: 0px 4px 8px rgba(52, 152, 219, 0.2);
}

/* Select Dropdown */
select.form-control {
    background: white;
    color: #2c3e50;
    cursor: pointer;
}

/* Submit Button */
.btn-primary {
    background: #2980b9;
    color: white;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    border-radius: 6px;
    transition: all 0.3s ease-in-out;
    border: none;
}

.btn-primary:hover {
    background: #1c6ea4;
    box-shadow: 0px 4px 10px rgba(41, 128, 185, 0.4);
}

/* Alerts */
.alert {
    text-align: center;
    font-weight: 600;
    border-radius: 6px;
    padding: 12px;
    width: 100%;
    max-width: 600px;
}

.alert-success {
    background-color: #2ecc71;
    color: white;
}

/* Responsive Design */
@media (max-width: 768px) {
    .container-fluid {
        padding: 10px;
    }

    .card {
        padding: 15px;
    }

    .btn-primary {
        width: 100%;
    }
}
</style>

<!-- Alerts at the Top -->
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <% if(locals?.message?.success) { %>
                <div class="alert alert-success" role="alert">
                    <%= locals?.message?.success %>
                </div>
            <% } %>

            <div class="card">
                <form class="form-horizontal" method="post" action="/subcategory/updatesubcategory">
                    <input type="hidden" name="editid" value="<%= single?.id %>" />
                    <div class="card-body">
                        <h4 class="card-title">Subcategory</h4>
                        <div class="form-group row">
                            <label class="col-sm-3 text-right control-label col-form-label">Category</label>
                            <div class="col-sm-9">
                                <select name="category" class="form-control">
                                    <option>--- Select Category ---</option>
                                    <% category.map((cat,index)=>{ %>
                                        <option <% if(single?.categoryId.category==cat?.category) { %>
                                            selected <% } %> value="<%= cat?.id %>">
                                            <%= cat?.category %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-3 text-right control-label col-form-label">Subcategory</label>
                            <div class="col-sm-9">
                                <input type="text" name="subcategory" value="<%= single?.subcategory %>"
                                    class="form-control" placeholder="Subcategory Name Here">
                            </div>
                        </div>
                    </div>
                    <div class="border-top">
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<%- include('../footer') %>
