    background:linear-gradient(135deg, #cecfd3, #243b55);
    margin: 0;
    padding: 0;
}

/* Page Wrapper */
.page-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background:linear-gradient(135deg, #cecfd3, #243b55);
    padding: 20px;
  }

  

/* Card Styling */
.card {
    width: 100%;
    max-width: 600px;
    background: white;
    padding: 25px;
    margin-left: 300px;
    border-radius: 8px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    animation: fadeIn 0.5s ease-in-out;
    transition: 1s;
  }

.card:hover {
    transform: translateY(-5px);
}

/* Card Title */
.card-title {
    font-size: 22px;
    font-weight: 600;
    color: #444;
    text-align: center;
    margin-bottom: 15px;
}


/* Form Styling */
.form-group {
    margin-bottom: 20px;
}

/* Input Fields */
.form-control {
    border-radius: 8px;
    border: 1px solid #ccc;
    padding: 12px;
    font-size: 15px;
    transition: 0.3s ease-in-out;
}

.form-control:focus {
    border-color: #ff758c;
    box-shadow: 0 0 8px rgba(255, 117, 140, 0.5);
}

/* Form Labels */
.control-label {
    font-weight: 600;
    color: #555;
}

/* Submit Button */
.btn-primary {
    background: linear-gradient(135deg, #ff758c, #ff7eb3);
    border: none;
    padding: 12px 20px;
    font-size: 16px;
    font-weight: bold;
    border-radius: 8px;
    transition: all 0.3s ease-in-out;
    width: 100%;
    display: block;
    text-transform: uppercase;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #ff7eb3, #ff758c);
    box-shadow: 0px 4px 10px rgba(255, 117, 140, 0.5);
    transform: translateY(-2px);
}

/* Success Alert */
.alert-success {
    background: linear-gradient(135deg, #28a745, #58d68d);
    color: white;
    border: none;
    padding: 12px;
    margin-left: 300px;
    width: 570px;
    border-radius: 8px;
    font-weight: bold;
    text-align: center;
}


</style>

<div class="page-wrapper">
    
    <div class="container-fluid">
        <div class="row">
            <div class="form-container col-md-6">
                <% if(locals?.message?.success) { %>
                    <div class="alert alert-success" role="alert">
                        <%= locals?.message?.success %>
                    </div>
                <% } %>

                <div class="card">
                    <form class="form-horizontal" method="post" action="/category/insertcategory">
                        <div class="card-body">
                            <h4 class="card-title" style="font-weight: 700; font-size: 30px; margin-bottom: 30px;">Category</h4>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label" style="font-weight: 600;">
                                    Category Name
                                </label>
                                <div class="col-sm-9">
                                    <input type="text" name="category" class="form-control" placeholder="Category Name Here">
                                </div>
                            </div>
                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div> 
                    </form>
                </div>
            </div>
        </div>
    </div>

 
</div>

<%- include('../footer') %>
  