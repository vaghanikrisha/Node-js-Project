<%- include('../header') %>

<style>
/* General Styling */
body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(135deg, #cecfd3, #243b55);
    margin: 0;
    padding: 0;
}

/* Page Wrapper */
.page-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background: linear-gradient(135deg, #cecfd3, #243b55);
    padding: 20px;
}


/* Card Styling */
.card {
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
    padding: 5px;
    margin-left: 50px;
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0px 8px 18px rgba(0, 0, 0, 0.2);
}

/* Card Title */
.card-title {
    font-size: 22px;
    font-weight: bold;
    color: #2c3e50;
    text-align: center;
    margin-bottom: 15px;
}

/* Form Styling */
.form-group {
    margin-bottom: 15px;
}

.form-group label {
    font-weight: 600;
    color: #34495e;
}

.form-control {
    border-radius: 6px;
    padding: 10px;
    font-size: 14px;
    border: 1px solid #bdc3c7;
    transition: all 0.3s ease-in-out;
}

.form-control:focus {
    border-color: #3498db;
    box-shadow: 0px 4px 8px rgba(52, 152, 219, 0.2);
}

/* Select Dropdown */
select.form-control {
    background: white;
    color: #2c3e50;
    cursor: pointer;
}

/* Submit Button */
.btn-primary {
    background: #2980b9;
    color: white;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    border-radius: 6px;
    transition: all 0.3s ease-in-out;
    border: none;
    width: 100%;
}

.btn-primary:hover {
    background: #1c6ea4;
    box-shadow: 0px 4px 10px rgba(41, 128, 185, 0.4);
}

/* Alerts */
.alert {
    text-align: center;
    font-weight: 600;
    border-radius: 6px;
    padding: 12px;
    width: 100%;
    max-width: 600px;
}

.alert-success {
    background-color: #2ecc71;
    color: white;
}

/* Responsive Design */
@media (max-width: 768px) {
    .page-wrapper {
        padding: 10px;
    }

    .card {
        padding: 15px;
    }

    .btn-primary {
        width: 100%;
    }
}
</style>

<!-- Alerts at the Top -->
<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
              
                <div class="card">
                    <form class="form-horizontal" method="post" action="/exsubcategory/insertexsubcategory">
                        <div class="card-body">
                            <% if(locals?.message?.success) { %>
                                <div class="alert alert-success" role="alert">
                                    <%= locals?.message?.success %>
                                </div>
                            <% } %>
            
                            <h4 class="card-title">Exsubcategory</h4>
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Category</label>
                                <div class="col-sm-9">
                                    <select name="category" id="category" onchange="categoryRecord()" class="form-control">
                                        <option value="">--- Select Category ---</option>
                                        <% category.map((cat,index)=>{ %>
                                            <option value="<%= cat?.id %>">
                                                <%= cat?.category %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Subcategory</label>
                                <div class="col-sm-9">
                                    <select name="subcategory" id="subcategory" class="form-control">
                                        <option value="">--- Select Subcategory ---</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Exsubcategory</label>
                                <div class="col-sm-9">
                                    <input type="text" name="exsubcategory" class="form-control"
                                        placeholder="Exsubcategory Name Here">
                                </div>
                            </div>

                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script type="text/javascript">
    const categoryRecord = () => {
        let categoryid = document.getElementById('category').value;
        $.ajax({
            type: "GET",
            url: `/exsubcategory/ajaxcategorywiserecord?categoryId=${categoryid}`,
            success: function (res) {
                let subcategory = res.subcategory;

                let tbl = `<option value="">--- Select Subcategory ---</option>`;
                subcategory.map((cat) => {
                    tbl += `<option value='${cat?._id}'>${cat?.subcategory}</option>`;
                });
                document.getElementById('subcategory').innerHTML = tbl;
            }
        });
    };
</script>

